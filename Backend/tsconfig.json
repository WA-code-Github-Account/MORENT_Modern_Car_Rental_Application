{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["ES2022"],
      "jsx": "preserve",
      "module": "ES2022",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "./build",
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }